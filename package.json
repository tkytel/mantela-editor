{
  "name": "mantela-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "tsc -b && vite build",
    "lint": "bun run conc \"npm:lint:*\"",
    "lint:xo": "xo .",
    "lint:tsc": "tsc -p tsconfig.app.json -p tsconfig.node.json --noEmit",
    "format": "xo . --fix",
    "preview": "vite preview",
    "postinstall": "flowbite-react patch",
    "sb": "storybook dev -p 6006 --no-open"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lint": "^6.8.5",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@uiw/codemirror-extensions-langs": "^4.23.10",
    "@uiw/react-codemirror": "^4.23.10",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.11.7",
    "immer": "^10.1.1",
    "jotai": "^2.12.2",
    "jotai-immer": "^0.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-select": "^5.10.1",
    "use-immer": "^0.11.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@storybook/react-vite": "^9.1.4",
    "@swc-jotai/react-refresh": "^0.3.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "jotai-devtools": "^0.11.0",
    "js-beautify": "^1.15.4",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "storybook": "^9.1.4",
    "tailwindcss": "3",
    "typescript": "~5.7.2",
    "uuid": "^11.1.0",
    "vite": "^6.2.0",
    "xo": "^1.2.2"
  },
  "prettier": {
    "bracketSpacing": true
  }
}
